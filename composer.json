{
    "name": "hyde/hyde",
    "description": "Static Site Generator to rapidly create Blogs, Documentation Sites, and more, using Markdown and Blade.",
    "keywords": [
        "framework",
        "hyde",
        "hyde framework",
        "hydephp",
        "static site generator",
        "static site framework",
        "ssg"
    ],
    "homepage": "https://hydephp.com",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/hydephp/hyde/issues",
        "source": "https://github.com/hydephp/hyde"
    },
    "authors": [
        {
            "name": "Emma De Silva",
            "email": "emma@desilva.se"
        }
    ],
    "require": {
        "php": "^8.2",
        "hyde/framework": "^2.0",
        "laravel-zero/framework": "^11.0",
        "symfony/yaml": "^7.4"
    },
    "require-dev": {
        "hyde/realtime-compiler": "^4.0",
        "larastan/larastan": "^3.8",
        "laravel/pint": "^1.26",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hyde\\Testing\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"@unlink('./app/storage/framework/cache/packages.php');\"",
            "@php hyde package:discover --ansi"
        ],
        "lint": [
            "pint --test"
        ],
        "lint:fix": [
            "pint"
        ],
        "analyse": [
            "phpstan analyse --memory-limit=2G"
        ],
        "test": [
            "@lint",
            "@analyse"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "hyde"
    ]
}
