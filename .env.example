# HydePHP Environment Configuration
# Copy this file to .env and adjust the values for your environment

# Site Configuration
SITE_NAME="Hagenberg Game Jam"
SITE_URL="http://localhost:8080"

# Game downloads: when set (e.g. R2 custom domain), download links use this base
# instead of same-origin /games/. Leave empty for local/same-origin.
# Example: GAMES_BASE_URL="https://files.hagenberg-gamejam.at"

# Cloudflare R2 Storage credentials (for gamejam:sync-r2 command)
# Get these from Cloudflare Dashboard → R2 → Manage R2 API Tokens
# R2_ACCOUNT_ID="your-account-id"
# R2_ACCESS_KEY_ID="your-access-key-id"
# R2_SECRET_ACCESS_KEY="your-secret-access-key"
# R2_BUCKET_NAME="your-bucket-name"
# R2_ENDPOINT="https://your-account-id.eu.r2.cloudflarestorage.com" (optional, defaults to EU endpoint)

# Server Configuration (for Hyde's built-in server)
SERVER_PORT=8080
SERVER_HOST=localhost
SERVER_SAVE_PREVIEW=false
SERVER_LIVE_EDIT=true
SERVER_DASHBOARD=true