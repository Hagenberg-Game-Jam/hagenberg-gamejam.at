{
    "preset": "per",
    "rules": {
        "no_unused_imports": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        }
    },
    "exclude": [
        "vendor",
        "_site",
        "node_modules",
        "storage",
        "bootstrap"
    ],
    "finder": {
        "in": [
            "app",
            "config",
            "resources/views",
            "_pages"
        ],
        "name": ["*.php", "*.blade.php"],
        "notName": []
    }
}
